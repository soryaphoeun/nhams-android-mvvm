<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="2dp">

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_recommend_01"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:paddingStart="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5.9"
                        android:layout_marginRight="6dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Brooklyn Pizza and Beef Hamburger"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:background="@drawable/border_rectangle"
                        android:text="1.7 km"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="13"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled_yellow"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled_yellow"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled_yellow"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled_yellow"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="4.0"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/colorLightGray"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_eye_filled_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="4dp"
                    android:gravity="end"
                    android:text="888"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="4dp"
                    android:text="Views"
                    android:textSize="12sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:text="10"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="Rating"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorLightGray"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Views"
                    android:textSize="12sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_fork_knife_gray"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Fast Food"
                    android:textSize="11sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorLightGray"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_location_gray"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Phnom Penh"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingRight="10dp"
                    android:text="Close Now"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGray"
        android:layout_marginTop="16dp"/>

</LinearLayout>